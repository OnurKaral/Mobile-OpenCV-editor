<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.opencv_imageprocessing_android.ProfileActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginBottom="10dp"
            android:id="@+id/userNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cornerRadius="5dp"
            android:id="@+id/changePasswordBttn"
            android:hint="Şifre değiştir"
            android:textColorHint="#6200ee"
            android:paddingEnd="5dp"
            />

        <android.support.design.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cornerRadius="5dp"
            android:id="@+id/changeEmailBttn"
            android:hint="E-posta değiştir"
            android:textColorHint="#6200ee"
            android:paddingEnd="5dp"
            />

        <android.support.design.button.MaterialButton
        android:id="@+id/signOutBttn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="#6200ee"
        android:text="Çıkış yap"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:cornerRadius="5dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/Geritusu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="#6200ee"
            app:srcCompat="@drawable/ic_home_black_24dp" />



    </LinearLayout>

</RelativeLayout>
